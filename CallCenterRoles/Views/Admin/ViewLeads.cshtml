@model IEnumerable<CallCenterRoles.Models.MyLeadModel>
@{
    ViewBag.Title = "ViewLeads";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

 <div class="right_col" role="main">
    <!-- top tiles -->
    <div class="page-title">
        <div class="title_left">
            <h3>Leads</h3>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Assign Leads</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>

                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br />
                    <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
                        @foreach (var item in Model)
                        {
                            ViewBag.LeadId = item.dataLeadId;
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                    @item.dataFieldName
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <label class="control-label">
                                        @item.dataFieldValue
                                    </label>
                                </div>
                            </div>
                        }
                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                @Html.ActionLink("Edit","EditLead", new {leadId=ViewBag.LeadId } ,new {@class="btn btn-primary" })
                                @Html.ActionLink("Delete", "DeleteLead", new { id = ViewBag.LeadId }, new { @class = "btn btn-danger" })
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- /top tiles -->
</div>

